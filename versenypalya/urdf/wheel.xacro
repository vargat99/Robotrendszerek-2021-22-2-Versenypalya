<?xml version="1.0"?>

<robot xmlns:xacro="http://ros.org/wiki/xacro" name="test_wheel">

	<xacro:macro name="test_wheel" params="wheel_prefix *joint_pose">
		<link name="${wheel_prefix}">
			<inertial>
				<mass value="2.637" />
				<origin xyz="0 0 0" rpy="0 ${M_PI/2} ${M_PI/2}"/>
				<inertia  ixx="0.02467" ixy="0" ixz="0" iyy="0.04411" iyz="0" izz="0.02467" />
			</inertial>
			<visual>
				<origin xyz="0 0 0" rpy="0 ${M_PI/2} ${M_PI/2}" />
				<geometry>
                    <!--cylinder length="${wheel_length}" radius="${wheel_radius}" /-->
                    <!--mesh filename = "package://urdf_examples/meshes/wheel.dae"/-->
					<mesh filename = "package://versenypalya/meshes/wheel_v1.dae"/>
				</geometry>
                <material name="green"/>
			</visual>
			<collision>
				<origin xyz="0 0 0" rpy="0 ${M_PI/2} ${M_PI/2}" />
				<geometry>
					<cylinder length="${wheel_length}" radius="${wheel_radius}" />
				</geometry>
			</collision>
		</link>

		<gazebo reference="${wheel_prefix}">
			<mu1 value="5.0"/>
			<mu2 value="1.0"/>
			<kp value="10000000.0" />
			<kd value="100.0" />
			<fdir1 value="1 0 0"/>
		</gazebo>

		<joint name="${wheel_prefix}_wheel" type="continuous">
			<parent link="base_link"/>
			<child link="${wheel_prefix}"/>
			<xacro:insert_block name="joint_pose"/>
			<axis xyz="0 1 0" rpy="0 0 0" />
		</joint>

	</xacro:macro>

</robot>